{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^es-(.*)": "/components/es-$1/es-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/tabBar/home/index",
      "name": "home",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/tabBar/community/index",
      "name": "community",
      "style": {
        "navigationBarTitleText": "社区",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/tabBar/message/index",
      "name": "portrait",
      "style": {
        "navigationBarTitleText": "消息",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/tabBar/profile/index",
      "name": "profile",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom",
        "navigationBarBackgroundColor": "#d1f6fb"
      }
    },
    {
      "path": "pages/word-detail/index",
      "name": "wordDetail",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    }
  ],
  "tabBar": {
    "color": "#18191C",
    "selectedColor": "#e87949",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/tabBar/home/index",
        "iconPath": "static/tabBar/home.png",
        "selectedIconPath": "static/tabBar/home-active.png",
        "text": ""
      },
      {
        "pagePath": "pages/tabBar/community/index",
        "iconPath": "static/tabBar/community.png",
        "selectedIconPath": "static/tabBar/community-active.png",
        "text": ""
      },
      {
        "pagePath": "pages/tabBar/message/index",
        "iconPath": "static/tabBar/message.png",
        "selectedIconPath": "static/tabBar/message-active.png",
        "text": ""
      },
      {
        "pagePath": "pages/tabBar/profile/index",
        "iconPath": "static/tabBar/profile.png",
        "selectedIconPath": "static/tabBar/profile-active.png",
        "text": ""
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "AUY",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#ffffff"
  }
}
