{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^es-(.*)": "/components/es-$1/es-$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/tabBar/home/index",
      "name": "home",
      "style": {
        "navigationBarTitleText": "首页",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/tabBar/novel/index",
      "name": "novel",
      "style": {
        "navigationBarTitleText": "轻小说",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/tabBar/portrait/index",
      "name": "portrait",
      "style": {
        "navigationBarTitleText": "写真",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/tabBar/book-shelf/index",
      "name": "bookShelf",
      "style": {
        "navigationBarTitleText": "书架",
        "navigationStyle": "custom"
      }
    },
    {
      "path": "pages/tabBar/profile/index",
      "name": "profile",
      "style": {
        "navigationBarTitleText": "我的",
        "navigationStyle": "custom",
        "navigationBarBackgroundColor": "#d1f6fb"
      }
    },
    {
      "path": "pages/word-detail/index",
      "name": "wordDetail",
      "style": {
        "navigationBarTitleText": "",
        "navigationStyle": "custom"
      }
    }
  ],
  "tabBar": {
    "color": "#18191C",
    "selectedColor": "#e87949",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "pagePath": "pages/tabBar/home/index",
        "iconPath": "static/tabBar/home.png",
        "selectedIconPath": "static/tabBar/home-active.png",
        "text": "精选"
      },
      {
        "pagePath": "pages/tabBar/novel/index",
        "iconPath": "static/tabBar/novel.png",
        "selectedIconPath": "static/tabBar/novel-active.png",
        "text": "轻小说"
      },
      {
        "pagePath": "pages/tabBar/portrait/index",
        "iconPath": "static/tabBar/portrait.png",
        "selectedIconPath": "static/tabBar/portrait-active.png",
        "text": "写真"
      },
      {
        "pagePath": "pages/tabBar/book-shelf/index",
        "iconPath": "static/tabBar/bookshelf.png",
        "selectedIconPath": "static/tabBar/bookshelf-active.png",
        "text": "书架"
      },
      {
        "pagePath": "pages/tabBar/profile/index",
        "iconPath": "static/tabBar/profile.png",
        "selectedIconPath": "static/tabBar/profile-active.png",
        "text": "我的"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "AUY",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#ffffff"
  }
}
