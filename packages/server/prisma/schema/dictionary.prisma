model Dictionary {
  id        Int      @id @default(autoincrement())
  name      String   @unique(map: "name") @db.VarChar(50)
  code      String   @unique(map: "code") @db.VarChar(50)
  status    Int      @default(1) @db.TinyInt
  remark    String?  @db.VarChar(255)
  /// 创建时间
  createdAt DateTime @default(dbgenerated("NOW()")) @map("created_at") @db.DateTime(0)
  /// 更新时间
  updatedAt DateTime @default(dbgenerated("NOW() ON UPDATE NOW()")) @map("updated_at") @db.Timestamp(0)

  items DictionaryItem[]

  @@map("dictionary")
}

model DictionaryItem {
  id           Int        @id @default(autoincrement())
  dictionary   Dictionary @relation(fields: [dictionaryId], references: [id])
  dictionaryId Int        @map("dictionary_id")
  name         String     @db.VarChar(50)
  code         String     @unique(map: "code") @db.VarChar(50)
  order        Int?       @default(0) @db.SmallInt
  status       Int        @default(1) @db.TinyInt
  remark       String?    @db.VarChar(255)
  /// 创建时间
  createdAt    DateTime   @default(dbgenerated("NOW()")) @map("created_at") @db.DateTime(0)
  /// 更新时间
  updatedAt    DateTime   @default(dbgenerated("NOW() ON UPDATE NOW()")) @map("updated_at") @db.Timestamp(0)

  @@index([dictionaryId])
  @@map("dictionary_item")
}
