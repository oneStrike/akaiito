model Comic {
  /// 主键id
  id                Int               @id @default(autoincrement())
  /// 漫画名称
  name              String            @unique(map: "comic_name") @db.VarChar(50)
  /// 漫画别名
  alias             String            @unique(map: "alias") @db.VarChar(50)
  /// 封面
  cover             String            @db.VarChar(255)
  /// 热度
  popularity        Int               @default(0) @db.Integer
  /// 虚拟热度
  virtualPopularity Int               @default(0) @map("virtual_popularity") @db.Integer
  /// 语言
  language          String            @db.VarChar(50)
  /// 地区
  region            String            @db.VarChar(50)
  /// 阅读权限  1不限制  2登录 3会员
  readPermissions   Int               @default(1) @map("read_permissions") @db.SmallInt
  /// 作者id
  authorId          Int               @map("author_id") @db.Integer
  author            Author            @relation(fields: [authorId], references: [id])
  /// 是否发布 1：发布 0：不发布
  isPublish         Int               @default(0) @db.SmallInt
  /// 发布日期
  publishAt         DateTime?         @map("publish_at") @db.Timestamp(0)
  /// 最后更新时间
  lastUpdated       DateTime?         @map("last_updated") @db.Timestamp(0)
  /// 描述
  description       String            @db.VarChar(255)
  /// 出版社
  publisher         String?           @db.VarChar(50)
  /// 章节数量
  chapterCount      Int               @default(0) @map("chapter_count") @db.Integer
  /// 是否已经完结
  isFinished        Int               @default(0) @map("is_finished") @db.SmallInt
  /// 创建时间
  createdAt         DateTime          @default(now()) @map("created_at") @db.Timestamp(0)
  /// 更新时间
  updatedAt         DateTime          @updatedAt @map("updated_at") @db.Timestamp(0)
  // 分类
  categories        ComicCategories[]

  @@index([authorId])
  @@map("comic")
}

model ComicCategories {
  comicId    Int
  categoryId Int
  comic      Comic    @relation(fields: [comicId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([comicId, categoryId])
  @@index([categoryId])
  @@map("comic_categories")
}
