model ClientNotification {
  /// 主键id
  id           Int       @id @default(autoincrement())
  /// 内容
  content      String    @db.MediumText
  /// 是否发布  1发布 0 取消
  isPublish    Int       @default(1) @map("is_publish") @db.TinyInt
  /// 发布开始时间
  startTime    DateTime? @map("start_time") @db.DateTime(0)
  /// 发布结束时间
  endTime      DateTime? @map("end_time") @db.DateTime(0)
  /// 页面代码，点击公告跳转的页面
  pageCode     String?   @map("page_code") @db.TinyText
  /// 是否启用小程序   1 启用 0 禁用
  enableApplet Int       @default(1) @map("enable_wechat")
  /// 是否启用H5   1 启用 0 禁用
  enableH5     Int       @default(1) @map("enable_h5")
  /// 是否启用APP   1 启用 0 禁用
  enableApp    Int       @default(1) @map("enable_app")
  /// 创建时间
  createdAt    DateTime  @default(now()) @map("created_at") @db.DateTime(0)
  /// 更新时间
  updatedAt    DateTime  @updatedAt @map("updated_at") @db.DateTime(0)

  @@map("client_notification")
}

/// 客户端系统配置
model ClientConfig {
  /// 主键id
  id         Int    @id @default(autoincrement())
  /// 客户端logo
  clientLogo String @map("client_logo") @db.VarChar(200)
  /// 客户端名字
  clientName String @map("client_name") @db.VarChar(50)
  /// 小说板块 0禁用 1启用 2 开发 3维护
  novelZone  Int    @default(1) @map("novel_enabled")
  /// 漫画板块 0禁用 1启用 2 开发 3维护
  comicZone  Int    @default(1) @map("comic_enabled")
  /// 写真板块 0禁用 1启用 2 开发 3维护
  photsZone  Int    @default(1) @map("cosplay_enabled")
  /// 视频板块 0禁用 1启用 2 开发 3维护
  videoZone  Int    @default(1) @map("video_enabled")

  /// 创建时间
  createdAt DateTime @default(now()) @map("created_at") @db.DateTime(0)
  /// 更新时间
  updatedAt DateTime @updatedAt @map("updated_at") @db.DateTime(0)

  @@map("client_config")
}
