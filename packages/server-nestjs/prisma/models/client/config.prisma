/// 客户端页面配置
model ClientPageConfig {
  /// 主键id
  id          Int            @id @default(autoincrement())
  /// 页面编码
  pageCode    String         @unique @map("page_code") @db.VarChar(50)
  /// 页面路径
  pagePath    String         @unique @map("page_path") @db.VarChar(200)
  /// 页面名称
  pageName    String         @unique @map("page_name") @db.VarChar(50)
  /// 页面权限 1普通 2登录 3会员
  pageRule    Int            @default(1) @map("page_rule") @db.SmallInt
  /// 状态  1启用  0禁用 2开发中 3维护中
  status      Int            @default(1) @db.SmallInt
  /// 页面描述信息
  description String?        @db.VarChar(200)
  /// 创建时间
  createdAt   DateTime       @default(now()) @map("created_at") @db.Timestamp(0)
  /// 更新时间
  updatedAt   DateTime       @updatedAt @map("updated_at") @db.Timestamp(0)
  AppNotice   ClientNotice[]

  /// 索引优化
  @@index([status]) // 按状态查询可用页面
  @@index([pageRule]) // 按权限级别查询
  @@map("client_page_config")
}

/// 客户端系统配置
model ClientConfig {
  /// 主键id
  id        Int      @id @default(autoincrement())
  /// 客户端logo
  appLogo   String   @map("app_logo") @db.VarChar(200)
  /// 客户端名字
  appName   String   @map("app_name") @db.VarChar(20)
  /// 小说板块 0禁用 1启用 2 开发 3维护
  novelZone Int      @default(1) @map("novel_enabled")
  /// 漫画板块 0禁用 1启用 2 开发 3维护
  comicZone Int      @default(1) @map("comic_enabled")
  /// 写真板块 0禁用 1启用 2 开发 3维护
  photsZone Int      @default(1) @map("cosplay_enabled")
  /// 视频板块 0禁用 1启用 2 开发 3维护
  videoZone Int      @default(1) @map("video_enabled")
  /// 创建时间
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamp(0)
  /// 更新时间
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamp(0)

  /// 索引优化
  @@index([novelZone, comicZone, photsZone, videoZone]) // 按模块状态查询
  @@map("client_config")
}
