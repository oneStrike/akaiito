# 数据库配置
DATABASE_URL="postgresql://postgres:password@localhost:5432/akaiito"

# Redis 配置
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_DB=0

# 应用配置
PORT=3000
NODE_ENV="development"

# 日志配置
# 日志级别: error, warn, info, debug
LOG_LEVEL="debug"

# 日志文件配置
LOG_DIR="./logs"
LOG_MAX_FILES="14d"  # 保留14天的日志文件
LOG_MAX_SIZE="20m"   # 单个日志文件最大20MB
LOG_DATE_PATTERN="YYYY-MM-DD"  # 日志文件日期格式

# 生产环境日志配置示例
# LOG_LEVEL="info"
# LOG_DIR="/var/log/akaiito"
# LOG_MAX_FILES="30d"
# LOG_MAX_SIZE="100m"

# 远程日志服务配置（可选）
# SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
# ELASTICSEARCH_HOST="localhost:9200"
# ELASTICSEARCH_INDEX="akaiito-logs"
