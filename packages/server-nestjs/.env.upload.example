# 文件上传配置示例
# 复制此文件为 .env 并根据需要修改配置

# 基础配置
UPLOAD_BASE_DIR=public
PUBLIC_BASE_URL=/public
UPLOAD_TEMP_DIR=./temp

# 文件限制
UPLOAD_MAX_FILE_SIZE=104857600  # 100MB
UPLOAD_MAX_FILES=50
UPLOAD_MAX_FILENAME_LENGTH=255

# 性能配置
UPLOAD_ENABLE_STREAMING=true
UPLOAD_CHUNK_SIZE=1048576  # 1MB
UPLOAD_CONCURRENT_UPLOADS=10

# 安全配置
UPLOAD_ENABLE_VIRUS_SCAN=false
UPLOAD_ENABLE_CONTENT_VALIDATION=true
UPLOAD_ENABLE_HASH_CHECK=true

# 监控配置
UPLOAD_ENABLE_METRICS=true
UPLOAD_METRICS_HISTORY_SIZE=10000

# 清理配置
UPLOAD_ENABLE_AUTO_CLEANUP=false
UPLOAD_CLEANUP_INTERVAL=24  # 小时
UPLOAD_MAX_FILE_AGE=30  # 天
