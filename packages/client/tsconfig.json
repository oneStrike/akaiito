{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"baseUrl": ".",
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"@dcloudio/types",
			"@types/node",
			"miniprogram-api-typings",
			"mini-types",
			"unplugin-vue-define-options/macros-global"
		],
		"paths": {
			"@/*": [
				"./src/*"
			],
			"~@/*": [
				"node_modules/@akaiito/typings/src/client/*"
			]
		}
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"src/**/*.nvue"
	]
}
