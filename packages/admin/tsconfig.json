{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "./components.d.ts",
    "./auto-import.d.ts"
  ],
  "baseUrl": ".",
  "paths": {
    "@/*": ["src/*"],
    "~@/*": ["node_modules/@akaiito/typings/src/admin/*"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
			"~@/*": ["./node_modules/@akaiito/typings/src/admin/*"]
    },
    "types": ["element-plus/global", "vite/client"]
  },

  "references": [
    {
      "path": "./tsconfig.vite-config.json"
    }
  ]
}
