{
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": ["node", "vite/client"],
    "paths": {
      "@/*": ["./src/*"],
      "@typings/*": ["node_modules/@akaiito/typings/src/*"]
    }
  },
  "include": [
    "vite.config.ts",
    "config/index.ts",
    "vite/**/*",
    "src/**/*",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx"
  ]
}
