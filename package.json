  "scripts": {
    "dev": "concurrently \"pnpm -C ./packages/server dev pnpm -C\" \"./packages/client dev:h5\"  \"pnpm -C ./packages/admin dev\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": " concurrently \"pnpm -C ./packages/admin lint\"  \"pnpm -C ./packages/server lint:fix\"  \"pnpm -C ./packages/client lint\"",
    "prepare": "husky install",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-angular": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "cz-conventional-changelog": "^3.3.0",
    "cz-customizable": "^7.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1",
    "typescript": "^4.9.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{js,vue,ts,jsx,tsx}": [
      "prettier --write",
      "pnpm -C ./packages/admin lint",
      "pnpm -C ./packages/server lint:fix",
      "pnpm -C ./packages/client lint"
