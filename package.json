{
  "name": "akaiito",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@8.8.0",
  "scripts": {
    "dev": "pnpm run -r dev",
    "dev:server": "pnpm run --filter @akaiito/server dev",
    "dev:admin": "pnpm run --filter @akaiito/admin dev",
    "dev:client": "pnpm run --filter @akaiito/client dev",
    "build": "pnpm run -r build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepare": "husky install",
    "commit": "git add . && git-cz",
    "reinstall": "rimraf node_modules **/*/node_modules --glob && pnpm install",
    "prettier": "prettier --config .prettierrc  --ignore-path .prettierignore --write ./**/*.{js,css,vue,ts,scss}",
    "lint:fix": "pnpm run --filter * lint:fix",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@commitlint/config-conventional": "^17.8.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.10.2",
    "commitizen": "^4.3.0",
    "commitlint": "^17.8.1",
    "commitlint-config-cz": "^0.13.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.1.0",
    "typescript": "~5.1.6"
  },
  "lint-staged": {
    "*.{ts,jsx,tsx,vue,js,css,,scss}": "pnpm run prettier",
    "*.{ts,jsx,tsx,vue,js}": "pnpm run lint:fix"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21"
  }
}
